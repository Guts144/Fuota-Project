# options base on clang-format version 14 available on ubuntu 22.04 https://releases.llvm.org/14.0.0/tools/clang/docs/ClangFormatStyleOptions.html
BasedOnStyle: Google
ColumnLimit: 180
SortIncludes: Never
DerivePointerAlignment: false
PointerAlignment: Left
ReferenceAlignment: Pointer
BinPackArguments: true
BinPackParameters: true
AlignConsecutiveAssignments: Enabled
AlignConsecutiveAssignments: AcrossEmptyLines
AlignConsecutiveAssignments: AcrossComments
AlignConsecutiveDeclarations: Enabled
AlignConsecutiveDeclarations: AcrossEmptyLines
AlignConsecutiveDeclarations: AcrossComments
UseTab: Never
IndentWidth: 4
IndentAccessModifiers: false
AccessModifierOffset: -3
BreakBeforeBraces: Custom
BraceWrapping:
   
